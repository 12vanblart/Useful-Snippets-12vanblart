  "Jinja for": {
    "prefix": "%for",
    "body": [
      "{% for ${2:element} in ${1:array} %}",
      "{% endfor %}"
    ],
    "description": "Create a Jinja For loop (Flask Template)"
  },
  "Jinja if": {
    "prefix": "%if",
    "body": [
      "{% if ${1:variable} %}",
      "\t",
      "{% else %}",
      "\t",
      "{% endif %}"
    ],
    "description": "Create a Jinja if/else block (Flask Template)"
  },
  "Jinja Block": {
    "prefix": "%%",
    "body": "{{% ${1:element} %}}",
    "description": "Create Jinja Brace Block"
  }
}
