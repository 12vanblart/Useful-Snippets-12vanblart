{
  "Jinja for": {
    "prefix": "%for",
    "body": [
      "{% for ${2:element} in ${1:array} %}",
      "{% endfor %}"
    ],
    "description": "Create a Jinja For loop (Flask Template)"
  },
  "Jinja if": {
    "prefix": "%if",
    "body": [
      "{% if ${1:variable} %}",
      "\t",
      "{% else %}",
      "\t",
      "{% endif %}"
    ],
    "description": "Create a Jinja if/else block (Flask Template)"
  },
  "Jinja Variable": {
    "prefix": "%var",
    "body": "{{ ${1:element} }}",
    "description": "Create Jinja Brace Block"
  },
  "Jinja Extends": {
    "prefix": "%extends",
    "body": "{% extends \"${1:page.html}\" %}",
    "description": "Create Jinja Extends Block"
  },
  "Jinja Block": {
    "prefix": "%block",
    "body": [
      "{% block ${1:content} %}",
      "\t",
      "{% endblock %}"
    ],
    "description": "Create Jinja Content Block"
  },
  "Jinja Liquid Tag": {
    "prefix": "%%",
    "body": [
      "{% ${1:tag} %}"
    ],
    "description": "Create Jinja Liquid Tag Block"
  },
  "Jinja With": {
    "prefix": "%with",
    "body": [
      "{% with ${1:ArrayName} = ${2:get_array_method()} %}",
      "",
      "{% endwith %}"
    ]
  }
}
